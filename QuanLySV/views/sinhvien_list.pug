doctype html
head
    meta(charset='UTF-8')
    title Demo With PG
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js')
.container
  .mt-3(style='text-align: center;')
    include header
  table.table.table-hover.table-striped.mt-3(width='500', border='1')
    tr
      th ID
      th Ho Ten
      th Email
      td(style='text-align: center')
        a(href='../sinhvien/them') Them

    each sv in danhsach
      tr
        td= sv.id
        td= sv.hoten
        td= sv.email
        td
          a(href='../sinhvien/sua/' + sv.id) Sua
          span &nbsp;
          a(onClick='return confirm("Do you want to delete it")' href='../sinhvien/xoa/' + sv.id) Xoa
  
  ul.pagination.float-right
    each idx in indexs
      li.page-item
        a.page-link(href='../sinhvien/list?page=' + idx)= idx

